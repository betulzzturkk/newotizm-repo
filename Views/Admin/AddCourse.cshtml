@model AutismEducationPlatform.Web.Models.ViewModels.CourseViewModel

<div class="container mt-4">
    <h2>Yeni Kurs Ekle</h2>
    <form asp-action="AddCourse" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" type="number" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InstructorId"></label>
            <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                <option value="">-- Eğitmen Seçin --</option>
            </select>
            <span asp-validation-for="InstructorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox">
                <input asp-for="IsActive" class="custom-control-input" />
                <label asp-for="IsActive" class="custom-control-label"></label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 