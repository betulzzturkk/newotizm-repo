<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eğitmen Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="instructor-panel">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/Instructor">
                    <i class="fas fa-chalkboard-teacher me-2"></i>
                    Eğitmen Paneli
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor">
                                <i class="fas fa-home me-1"></i>Panel
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/Courses">
                                <i class="fas fa-book me-1"></i>Eğitimlerim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/Students">
                                <i class="fas fa-users me-1"></i>Öğrencilerim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/Messages">
                                <i class="fas fa-envelope me-1"></i>Mesajlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Instructor/Profile">
                                <i class="fas fa-user-cog me-1"></i>Profil
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/Instructor/Profile">
                                        <i class="fas fa-cog me-2"></i>Ayarlar
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - İGÜ - Otizm Eğitim Platformu
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 