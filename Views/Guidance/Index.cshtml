@{
    ViewData["Title"] = "Rehberlik";
    Layout = "_ParentLayout";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm" style="background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);">
                <div class="card-body text-white">
                    <h2 class="card-title text-white">Otizm ve Aile</h2>
                    <p class="card-text opacity-75">Otizmli çocuğunuzun gelişimi için rehberlik bilgileri ve öneriler burada.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-heart-pulse me-2 text-primary"></i>
                        Otizmli Çocuğa Nasıl Davranmalı?
                    </h4>
                    
                    <div class="accordion" id="guidanceAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#section1">
                                    Sabırlı ve Tutarlı Olun
                                </button>
                            </h2>
                            <div id="section1" class="accordion-collapse collapse show" data-bs-parent="#guidanceAccordion">
                                <div class="accordion-body">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Her çocuğun kendi hızında öğrendiğini unutmayın
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Günlük rutinler oluşturun ve bu rutinlere sadık kalın
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Olumlu davranışları ödüllendirin ve pekiştirin
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#section2">
                                    İletişimi Güçlendirin
                                </button>
                            </h2>
                            <div id="section2" class="accordion-collapse collapse" data-bs-parent="#guidanceAccordion">
                                <div class="accordion-body">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Göz teması kurmaya çalışın
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Basit ve net cümleler kullanın
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Görsel destekler kullanın
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#section3">
                                    Sosyal Becerileri Geliştirin
                                </button>
                            </h2>
                            <div id="section3" class="accordion-collapse collapse" data-bs-parent="#guidanceAccordion">
                                <div class="accordion-body">
                                    <ul class="list-unstyled">
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Akran etkileşimini destekleyin
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Sosyal durumları önceden anlatın
                                        </li>
                                        <li class="mb-3">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            Grup aktivitelerine katılımı teşvik edin
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-house-heart me-2 text-primary"></i>
                        Ailenin Önemi
                    </h4>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h5 class="text-primary">Aile Desteği</h5>
                                <p>Otizmli çocukların gelişiminde aile desteği kritik bir rol oynar. Ailenin tutumu ve yaklaşımı, çocuğun sosyal, duygusal ve bilişsel gelişimini doğrudan etkiler.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h5 class="text-primary">Ev Ortamı</h5>
                                <p>Güvenli, destekleyici ve tutarlı bir ev ortamı oluşturmak, çocuğun gelişimi için temel bir gerekliliktir. Ev içi rutinler ve düzen önemlidir.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h5 class="text-primary">Kardeş İlişkileri</h5>
                                <p>Kardeşlerin bilgilendirilmesi ve sürece dahil edilmesi, aile içi uyumu güçlendirir ve otizmli çocuğun sosyal gelişimine katkı sağlar.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="border rounded p-3 h-100">
                                <h5 class="text-primary">Eğitimde Süreklilik</h5>
                                <p>Okulda öğrenilen becerilerin evde pekiştirilmesi ve desteklenmesi, eğitimin etkinliğini artırır.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-journal-text me-2 text-primary"></i>
                        Faydalı Kaynaklar
                    </h4>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Otizm El Kitabı</h6>
                                <small class="text-muted">PDF</small>
                            </div>
                            <p class="mb-1">Otizmli çocukların eğitimi için kapsamlı rehber.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Davranış Yönetimi</h6>
                                <small class="text-muted">Video</small>
                            </div>
                            <p class="mb-1">Zorlayıcı davranışlarla başa çıkma teknikleri.</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">İletişim Becerileri</h6>
                                <small class="text-muted">Makale</small>
                            </div>
                            <p class="mb-1">Etkili iletişim için pratik öneriler.</p>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-calendar-event me-2 text-primary"></i>
                        Yaklaşan Etkinlikler
                    </h4>
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Aile Eğitim Semineri</h6>
                                <small class="text-muted">15 Nisan</small>
                            </div>
                            <p class="mb-1">Otizmli çocuklarda iletişim becerileri.</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Online Workshop</h6>
                                <small class="text-muted">20 Nisan</small>
                            </div>
                            <p class="mb-1">Evde eğitim teknikleri ve uygulamalar.</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Veli Buluşması</h6>
                                <small class="text-muted">25 Nisan</small>
                            </div>
                            <p class="mb-1">Deneyim paylaşımı ve sosyal etkinlik.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 