@model AutismEducationPlatform.Web.Models.InstructorRegistrationViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-action="InstructorRegister" asp-controller="Account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name">Ad Soyad</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email">E-posta</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password">Şifre</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChildName">Çocuğun Adı</label>
                            <input asp-for="ChildName" class="form-control" />
                            <span asp-validation-for="ChildName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChildAge">Çocuğun Yaşı</label>
                            <input asp-for="ChildAge" class="form-control" type="number" />
                            <span asp-validation-for="ChildAge" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" />
                                <label asp-for="AcceptTerms" class="form-check-label">Kullanım koşullarını kabul ediyorum</label>
                                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 