@model AutismEducationPlatform.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Kayıt Ol</h2>
                    
                    <ul class="nav nav-pills nav-justified mb-4" id="registerTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="parent-tab" data-bs-toggle="pill" data-bs-target="#parent" type="button" role="tab">
                                <i class="fas fa-user-friends me-2"></i>Veli Kaydı
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="instructor-tab" data-bs-toggle="pill" data-bs-target="#instructor" type="button" role="tab">
                                <i class="fas fa-chalkboard-teacher me-2"></i>Eğitmen Kaydı
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="registerTabContent">
                        <!-- Veli Kayıt Formu -->
                        <div class="tab-pane fade show active" id="parent" role="tabpanel">
                            <form asp-action="Register" asp-controller="Account" method="post">
                                <input type="hidden" name="Role" value="Parent" />
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Şifre</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ChildName" class="form-label">Çocuğunuzun Adı</label>
                                    <input asp-for="ChildName" class="form-control" />
                                    <span asp-validation-for="ChildName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ChildAge" class="form-label">Çocuğunuzun Yaşı</label>
                                    <input asp-for="ChildAge" class="form-control" type="number" />
                                    <span asp-validation-for="ChildAge" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-user-plus me-2"></i>Veli Olarak Kayıt Ol
                                </button>
                            </form>
                        </div>

                        <!-- Eğitmen Kayıt Formu -->
                        <div class="tab-pane fade" id="instructor" role="tabpanel">
                            <form asp-action="Register" asp-controller="Account" method="post">
                                <input type="hidden" name="Role" value="Instructor" />
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Ad Soyad</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Şifre</label>
                                    <input asp-for="Password" class="form-control" type="password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Specialization" class="form-label">Uzmanlık Alanı</label>
                                    <input asp-for="Specialization" class="form-control" />
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Experience" class="form-label">Deneyim (Yıl)</label>
                                    <input asp-for="Experience" class="form-control" type="number" />
                                    <span asp-validation-for="Experience" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-chalkboard-teacher me-2"></i>Eğitmen Olarak Kayıt Ol
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <p>Zaten hesabınız var mı? <a asp-action="Login" asp-controller="Account">Giriş Yap</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validasyonunu aktifleştir
        $(document).ready(function() {
            $('form').validate();
        });
    </script>
} 