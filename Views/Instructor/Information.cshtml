@model List<AutismEducationPlatform.Web.Models.Information>

@{
    ViewData["Title"] = "Bilgilendirmeler";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Bilgilendirmeler</h1>
            <p class="lead">Otizmli öğrencilerinizin eğitimi için önemli bilgiler ve güncellemeler.</p>
        </div>
    </div>

    <div class="row">
        @foreach (var info in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@info.Title</h5>
                        <p class="card-text">@info.Content</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">@info.PublishDate.ToString("dd MMMM yyyy")</small>
                            <span class="badge bg-primary">@info.Category</span>
                        </div>
                        @if (!string.IsNullOrEmpty(info.ImageUrl))
                        {
                            <img src="@info.ImageUrl" class="card-img-top mt-3" alt="@info.Title">
                        }
                        @if (!string.IsNullOrEmpty(info.Tags))
                        {
                            <div class="mt-3">
                                @foreach (var tag in info.Tags.Split(','))
                                {
                                    <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div> 