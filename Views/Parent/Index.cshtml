@using AutismEducationPlatform.Web.Models.ViewModels
@model ParentProfileViewModel

@{
    ViewData["Title"] = "Veli Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="/images/profile/default.jpg" alt="Profil Resmi" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="text-muted">Veli</p>
                    <div class="d-grid gap-2">
                        <a asp-action="Profile" class="btn btn-outline-primary">
                            <i class="fas fa-user-edit me-2"></i>Profili Düzenle
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">İletişim Bilgileri</h5>
                    <p class="mb-2">
                        <i class="fas fa-envelope me-2 text-muted"></i>
                        @Model.Email
                    </p>
                    <p class="mb-0">
                        <i class="fas fa-phone me-2 text-muted"></i>
                        @Model.PhoneNumber
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Çocuk Bilgileri</h5>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="mb-2">
                                <strong>Ad:</strong> @Model.ChildName
                            </p>
                        </div>
                        <div class="col-sm-6">
                            <p class="mb-2">
                                <strong>Yaş:</strong> @Model.ChildAge
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-tasks text-primary me-2"></i>
                                Aktiviteler
                            </h5>
                            <p class="card-text">Çocuğunuz için özel aktiviteleri görüntüleyin ve takip edin.</p>
                            <a asp-action="Activities" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>
                                Aktivitelere Git
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-chart-line text-success me-2"></i>
                                İlerleme
                            </h5>
                            <p class="card-text">Çocuğunuzun gelişimini ve ilerlemesini takip edin.</p>
                            <a asp-action="Progress" class="btn btn-success">
                                <i class="fas fa-arrow-right me-2"></i>
                                İlerlemeyi Gör
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-envelope text-info me-2"></i>
                        Mesajlar
                    </h5>
                    <p class="card-text">Eğitmenlerle iletişim kurun ve mesajlarınızı yönetin.</p>
                    <a asp-action="Messages" class="btn btn-info text-white">
                        <i class="fas fa-arrow-right me-2"></i>
                        Mesajlara Git
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 