@model AutismEducationPlatform.Web.Models.ViewModels.ParentProfileViewModel

@{
    ViewData["Title"] = "Profil Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-3">
                <i class="fas fa-user-edit text-primary me-2"></i>
                Profil Düzenle
            </h2>
            <p class="text-muted">Kişisel bilgilerinizi ve çocuğunuzun bilgilerini güncelleyin.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="/images/profile/default.jpg" alt="Profil Resmi" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="text-muted mb-4">Veli</p>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-camera me-2"></i>Fotoğraf Değiştir
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h5 class="card-title mb-4">Kişisel Bilgiler</h5>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad</label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad</label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="card-title mb-4">Çocuk Bilgileri</h5>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChildName" class="form-label">Çocuğun Adı</label>
                                    <input asp-for="ChildName" class="form-control" />
                                    <span asp-validation-for="ChildName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ChildAge" class="form-label">Çocuğun Yaşı</label>
                                    <input asp-for="ChildAge" class="form-control" type="number" min="1" max="18" />
                                    <span asp-validation-for="ChildAge" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 