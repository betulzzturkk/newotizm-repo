@model AutismEducationPlatform.Web.Models.ViewModels.ParentProfileViewModel
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["StatusMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="UpdateProfile" asp-controller="Parent">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">E-posta</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Adres</label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <hr />
                        <h4>Çocuk Bilgileri</h4>

                        <div class="form-group mb-3">
                            <label asp-for="ChildName" class="form-label">Çocuğun Adı</label>
                            <input asp-for="ChildName" class="form-control" />
                            <span asp-validation-for="ChildName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChildAge" class="form-label">Çocuğun Yaşı</label>
                            <input asp-for="ChildAge" class="form-control" type="number" min="1" max="18" />
                            <span asp-validation-for="ChildAge" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChildDiagnosis" class="form-label">Tanı</label>
                            <textarea asp-for="ChildDiagnosis" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ChildDiagnosis" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 