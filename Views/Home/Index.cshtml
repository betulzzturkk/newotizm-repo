@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section text-center py-5" style="background: linear-gradient(135deg, #6B48FF 0%, #1E90FF 100%); color: white; min-height: 500px; display: flex; align-items: center;">
        <div class="container">
            <h1 class="display-4 mb-4">Otizm Eğitim Platformuna Hoş Geldiniz</h1>
            <p class="lead mb-4">Otizmli çocukların eğitiminde yenilikçi ve etkili çözümler sunuyoruz.</p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg px-4">Giriş Yap</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg px-4">Kayıt Ol</a>
                <a asp-controller="Course" asp-action="Index" class="btn btn-warning btn-lg px-4">Eğitimleri Görüntüle</a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-graduation-cap fa-3x mb-3 text-primary"></i>
                        <h3 class="card-title">Özelleştirilmiş Eğitim</h3>
                        <p class="card-text">Her çocuğun bireysel ihtiyaçlarına uygun eğitim programları sunuyoruz.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x mb-3 text-success"></i>
                        <h3 class="card-title">Uzman Eğitmenler</h3>
                        <p class="card-text">Deneyimli ve uzman eğitmenlerimizle kaliteli eğitim hizmeti sağlıyoruz.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x mb-3 text-info"></i>
                        <h3 class="card-title">Gelişim Takibi</h3>
                        <p class="card-text">Çocuğunuzun gelişimini düzenli olarak takip edip raporluyoruz.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Section -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-5">Popüler Eğitimlerimiz</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="~/images/course1.jpg" class="card-img-top" alt="Temel Beceriler">
                        <div class="card-body">
                            <h4 class="card-title">Temel Beceriler</h4>
                            <p class="card-text">Günlük yaşam becerilerini geliştirmeye yönelik eğitim programı.</p>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="1" class="btn btn-outline-primary">Detayları Gör</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="~/images/course2.jpg" class="card-img-top" alt="İletişim Becerileri">
                        <div class="card-body">
                            <h4 class="card-title">İletişim Becerileri</h4>
                            <p class="card-text">Sosyal iletişim ve etkileşim becerilerini geliştirme programı.</p>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="2" class="btn btn-outline-primary">Detayları Gör</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="~/images/course3.jpg" class="card-img-top" alt="Akademik Beceriler">
                        <div class="card-body">
                            <h4 class="card-title">Akademik Beceriler</h4>
                            <p class="card-text">Okul öncesi ve akademik becerileri geliştirme programı.</p>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="3" class="btn btn-outline-primary">Detayları Gör</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg">Tüm Eğitimleri Görüntüle</a>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="mb-4">Neden Biz?</h2>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Uzman eğitmen kadrosu
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Bireyselleştirilmiş eğitim programları
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Düzenli gelişim takibi ve raporlama
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Online eğitim desteği
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Aile danışmanlığı hizmeti
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <img src="~/images/about-image.jpg" alt="Eğitim Ortamı" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="mb-4">Bize Ulaşın</h2>
                <p class="mb-4">Sorularınız için bizimle iletişime geçebilirsiniz.</p>
                <a href="mailto:info@otizm.com" class="btn btn-primary btn-lg">
                    <i class="fas fa-envelope me-2"></i>
                    İletişime Geç
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/images/pattern.png') repeat;
            opacity: 0.1;
        }

        .card {
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
    </style>
}
